@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PruebaPractica.styles.css" asp-append-version="true" />
</head>
<body onload="window.history.forward();" class="gradiantAnimated">
   

    <div class="container-fluid vh-100" style="padding-left: 0px; padding-right: 0px;">
        <section class="vh-100 gradiantAnimated">
            <br />
           
            <div class="container">
                <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
                    <symbol id="check-circle-fill" fill="currentColor" viewBox="0 0 16 16">
                        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
                    </symbol>
                    <symbol id="info-fill" fill="currentColor" viewBox="0 0 16 16">
                        <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z" />
                    </symbol>
                    <symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
                        <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                    </symbol>
                </svg>
                @if (@TempData["AlertLogin"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Warning:"><use xlink:href="#exclamation-triangle-fill" /></svg>
                        <strong>Acceso Denegado: </strong> @TempData["AlertLogin"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"> &nbsp;</button> &nbsp;
                        &nbsp;
                    </div>
                }
            </div>
            <div class="container px-4 py-5 px-md-5 text-center text-lg-start my-5">
                <div class="row gx-lg-5 align-items-center mb-5">
                    <div class="col-lg-6 mb-5 mb-lg-0" style="z-index: 10">
                        <h1 class="my-5 display-5 fw-bold ls-tight" style="color: hsl(218, 81%, 95%)">
                             <br />
                            <span style="color: hsl(218, 85%, 78%)"></span>
                        </h1>
                        <p class="mb-4 opacity-70" style="color: black">
                            Bienvenido para acceder ingresa en el campo usuario y en el campo contraseña la palabra 'buscador' para ingresar como Buscador, si deseas ingresar como ciudadano ingresa la palabra 'ciudadano'
                        </p>
                    </div>

                    <div class="col-lg-6 mb-5 mb-lg-0 position-relative">
                        <div id="radius-shape-1" class="position-absolute rounded-circle shadow-5-strong"></div>
                        <div id="radius-shape-2" class="position-absolute shadow-5-strong"></div>

                        <div class="card bg-glass">
                            <div class="card-body px-4 py-5 px-md-5">
                                <div class="text-center text-dark">
                                    <h1>Ingresar</h1>
                                </div>

                                <hr />
                                <p class="text-dark-50 mb-4 text-center">Escriba su usuario y contraseña.</p>
                                <form method="post" asp-controller="Home" asp-action="Login">
                                   
                                    <div class="form-outline mb-4">
                                        <input type="text" id="user" class="form-control form-control-lg" placeholder="Usuario" name="user" required />
                                    </div>

                                   
                                    <div class="form-outline mb-4">
                                        <input type="password" id="typePasswordX" class="form-control form-control-lg" placeholder="Contraseña" name="pass" required />
                                    </div>
                                                                                                          
                                    <br />
                                   
                                    <div class="text-center">
                                        <button type="submit" class="btn btn-primary">
                                            <b>Acceder</b>
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
